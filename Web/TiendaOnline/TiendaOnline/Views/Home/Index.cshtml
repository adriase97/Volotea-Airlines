);

CREATE TABLE Producto (
    IdProducto INT PRIMARY KEY IDENTITY(1,1),
    Nombre NVARCHAR(100) NOT NULL,
    Tallas NVARCHAR(20) NOT NULL,
    Color NVARCHAR(50) NOT NULL,
    Precio DECIMAL(18, 2) CHECK (Precio > 0) NOT NULL,
    Descripcion NVARCHAR(MAX) NOT NULL CHECK (LEN(Descripcion) >= 10),
    Imagen NVARCHAR(MAX) NOT NULL,
    Stock INT CHECK (Stock >= 0) NOT NULL,
    IdTipoProducto INT NOT NULL,

    CONSTRAINT FK_Producto_TipoProducto FOREIGN KEY (IdTipoProducto) 
    REFERENCES TipoProducto (IdTipoProducto)
);

